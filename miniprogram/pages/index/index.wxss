/**index.wxss**/
page{
  background-color: #8A2432;
  height: 100%;
}
.container{
  display: grid;
  grid-template-rows: 80% 20%;
  align-items: center;
  height: 100%;
}
.body-card{
  background-color: #F2D8DC;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  width: 100%;
  height: 80vh;
  display: grid;
}
.bg1{
  text-align: center;
  position: relative;
  top: 40rpx;
}
.bg1 image{
  width: 450rpx;
}
.logo{
  width: 100%;
  top: 40rpx;
  position: absolute;
}
.logo image{
  width: 150rpx;
  height: 82rpx;
}

.content{
  color: #8A2432;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}
.moreInfo{
  text-align: center;
}
.moreInfoBtn{
  width: 280rpx;
  height: 80rpx;
  margin: 0rpx auto;
  color: #ffffff;
  background-color: #C77176;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 80rpx;
  border-radius: 5rem;
}
.foot{
  width: 100%;
  text-align: center;
}
.footBtn{
  width: 640rpx;
  padding: 0rpx;
  margin: 0 auto;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #8A2432;
  background-color: #ffffff;
  border-radius: 5rem;
}

.toast{
  position: fixed;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  background-color: #8A2432;
}
.dialog{
  position: fixed;
  height: 95vh;
  width: 100vw;
  top: 5vh;
  left: 0;
  background-color: #F2D8DC;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.closeImg{
  width: 100%;
  text-align: center;
  position: relative;
  top: 40rpx;
}
.closeImg image{
  width: 50rpx;
  height: 50rpx;
}
.dialogContent{
  text-align: left;
  width: 650rpx;
  margin: 40rpx auto;
  font-size: 24rpx;
  color: #8A2432;
}



.dialogFoot{
  background-color: #ffffff;
  width: 620rpx;
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.dialogFootBtn{
  width: 100%;
}
.dialogFootBtn view{
  width:240rpx;
  height: 66rpx;
  line-height: 66rpx;
  margin: 20rpx auto;
  background-color: #8A2432;
  color: #ffffff;
  border-radius: 5rem;
  text-align: center;
  font-size: 28rpx;
}
.dialogFootContent{
  font-size: 28rpx;
  color: #8A2432;
  line-height: 60rpx;
  font-weight: bold;
}
.dialogFootContent image{
  width:40rpx;
  height: 40rpx;
  font-size: 0;
  margin-right: 10rpx;
  
}


.container-fill{
	height: 100%;
	overflow: hidden;
}
.scroll-fullpage{
	height: 100%;
	transition: all 0.3s;
}
.section{
	height: 100%;
}
.section-maintitle{
	display: block;
	text-align: center;
	font-size: 50rpx;
	color: #fff;
	font-weight: bold;
	letter-spacing: 10rpx;
	padding-top: 140rpx;
}
.section-subtitle{
	display: block;
	text-align: center;
	font-size: 40rpx;
	color: #fff;
	font-weight: bold;
	letter-spacing: 10rpx;
}
.active .section-maintitle,
.active .section-subtitle{
	animation: mymove 0.8s;
}
@keyframes mymove{
	from {
		transform: translateY(-400rpx) scale(0.5) rotateY(90deg);
	}
	to {
		transform: translateY(0) scale(1) rotateY(0);
	}
}