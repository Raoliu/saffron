/* pages/question/index.wxss */
.container{
    height: 100%;
    width: 100%;
    background-color: #8A2432;
}
.card{
    width: 100%;
    height: 95vh;
    position: relative;
    top: 5vh;
    background-color: #F2D8DC;
    border-radius: 40rpx 40rpx 0 0;
    overflow: hidden;
}
.logo{
    width: 100%;
    text-align: center;
    margin-top: 40rpx;
}
.logo image{
    width: 200rpx;
    height: 82rpx;
}
.last_question{
    width: 80%;
    margin: 40rpx auto;
}
.last_question>view{
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    text-align: center;
    background-color: #C77176;
    font-size: 28rpx;
    border-radius: 5rem;
    position: relative;
}
.last_question image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}
.process{
    position: relative;
    width: 80%;
    height: 60rpx;
    margin: 20rpx auto;
}
.processTotal{
    width: 100%;
    border-radius: 5rem;
    height: 60rpx;
    background-color: #EEEAE6;
}
.pro{
    position: absolute;
    top: 0;
    left: 0;
}
.processed{
    z-index: 2;
    background-color: #8A2432;
    border-radius: 5rem;
    height: 60rpx;
}
.processNum{
    position: absolute;
    right: 20rpx;
    font-weight: 800;
    color: #8A2432;
    top: 12rpx;
    z-index: 3;
    font-size: 28rpx;
}
.questions{
    width: 80%;
    position: relative;
    margin: 40rpx auto;
}
.title{
    color: #8A2432;
    font-size: 28rpx;
    text-align: center;
}
.options{
    width: 90%;
    display: flex;
    flex-wrap:wrap;
    gap: 40rpx;
    margin: 40rpx auto
}
.optionItem{
    width: 100%;
    text-align: center;
    border-radius: 5rem;
    font-size: 28rpx;
    line-height: 70rpx;
    color:#8A2432;
    background-color: #EEEAE6;
}
.foot{
    /* width: 100%; */
    /* position: relative; */
    position: relative;
    /* bottom: 50rpx;
    right: 50rpx; */
}
.foot image{
    width: 25%;
    position: absolute;
    right: 50rpx;
}