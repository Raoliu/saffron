/* components/dialog1/index.wxss */
.cardBody {
    background-color: #EEEAE6;
    border-top-right-radius: 40rpx;
    padding-bottom: 80rpx;
    position: relative;
    top: -2rpx;
}

.dialog {
    width: 80%;
    margin: 0 auto;
    position: relative;
    top: 40rpx;
    background-color: #F2D8DC;
    border-radius: 40rpx;
}

.closeImg {
    width: 100%;
    text-align: center;
    padding: 40rpx 0;
}

.closeImg image {
    width: 64rpx;
}

.dialogTitle {
    color: #8A2432;
    font-size: 64rpx;
    font-weight: bold;
    text-align: center;
}

.dialogImg {
    width: 480rpx;
    margin: 0rpx auto;
    margin-top: 20rpx;
}

.dialogImg image {
    width: 100%;
}

.dialogCont {
    padding: 30rpx 0;
    text-align: center;
}

.dialogContitle {
    font-size: 30rpx;
    color: #8A2432;
    font-weight: bold;
    line-height: 50rpx;
}

.dialogContent {
    font-size: 24rpx;
    color: #8A2432;
}

.dialogContent image {
    width: 100rpx;
}

.dialogContent>view:last-child {
    height: 32rpx;
}

.add {
    display: flex;
    padding: 30rpx 0;
    justify-content: center;
    gap: 40rpx;
}

.add>view {
    border-radius: 5rem;
    border: 10rpx solid #AA423E;
    background-color: #EEEAE6;
    width: 120rpx;
    height: 120rpx;
    align-items: center;
    display: flex;
    justify-content: center;
}

.addImg {
    width: 40rpx;
}

.Avatar {
    width: 100%;
    border-radius: 5rem;
}

.footBtn {
    width: 360rpx;
    height: 80rpx;
    margin: 0rpx auto;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: #8A2432;
    font-size: 28rpx;
    border-radius: 5rem;
}

.footBtn button {
    color: #fff !important;
    font-weight: 400 !important;
    font-size: 28rpx !important;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    width: 100%;
}

.add button {
    background-color: rgba(255, 255, 255, 0);
    padding: 0rpx;
    width: 100%;
    height: 140rpx;
    line-height: 140rpx;
    align-items: center;
    display: flex;
    justify-content: center;
}