.cardTitle{
    text-align: center;
}
.cardTitle {
    -webkit-text-stroke: 3rpx #C77176;
    color: transparent;
    font-size: 70rpx;
    /* line-height: 150rpx; */
    padding: 20rpx 0;
    font-family: "SimHei";
}
.cardPic{
    position: relative;
    width: 100%;
    height: auto;
    text-align: center;
    margin-bottom: 20rpx;
}

.result0_1{
    width: 680rpx;
    z-index: 3;
    top: 100rpx;
    left: 40rpx;
}

.cardToastTitle{
    display: flex;
    width: 80%;
    margin: 0 auto;
    justify-content: center;
    gap: 10rpx;
    align-items: center;
    color: #8A2432;
    font-size: 36rpx;
    font-weight: bold;
}
.cardToastTitle image{
    width: 38rpx;
}
.cardToastBody{
   width: 80%;
   margin: 40rpx auto; 
   display: flex;
   justify-content: center;
}
.codeText{
    width: 35%;
    font-size: 24rpx;
    color: #8A2432;
    text-align: center;
}
.cardToastBody image{
    width: 130rpx;
    border-radius: 5rem;
}
.cardInfo{
    width: 65%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-left: 20rpx;
}
.cardInfo>view{
    width: 100%;
}
.cardInfoItem{
    width: auto;
    height: 48rpx;
    line-height: 48rpx;
    padding: 10rpx 40rpx 10rpx 20rpx;
    background-color: #E3A1AD;
    border-radius: 0 5rem 5rem 0;
    font-size: 28rpx;
    font-weight: bold;
    color: #fff;
}

.foot{
    width: 560rpx;
    margin: 0rpx auto;
    background-color: #EEEAE6;
    border-radius: 40rpx;
    padding: 40rpx;
}
.footContent{
    display: flex;
    gap: 10rpx;
}
.footImg{
    width: 34%;
}
.footImg image{
    width: 180rpx;
}
.footTxt{
    width: 66%;
    display: grid;
}
.footContentTitle{
    font-size: 28rpx;
    font-weight: bold;
    color: #8A2432;
}
.footContentBody{
    color: #C77176;
    font-size: 24rpx;
}
.footContentFoot{
    font-size: 24rpx;
    color: #C77176;
    font-weight: 600;
}
.footBtn{
    width: 360rpx;
    height: 80rpx;
    margin: 0rpx auto;
    margin-top: 40rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: #8A2432;
    font-size: 28rpx;
    border-radius: 5rem;
} 